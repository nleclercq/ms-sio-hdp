if [ -z "${SPARK_HOME}" ]; then
  source "$(dirname "$0")"/find-spark-home
fi

echo ${SPARK_HOME}
source "${SPARK_HOME}"/bin/load-spark-env.sh

export PYSPARK_SUBMIT_ARGS="--packages org.apache.spark:spark-sql-kafka-0-10_2.11:2.4.0 pyspark-shell"
export PYTHONPATH="${SPARK_HOME}/python/:$PYTHONPATH"
export PYTHONPATH="${SPARK_HOME}/python/lib/py4j-0.10.7-src.zip:$PYTHONPATH"
export HADOOP_CONF_DIR=/etc/hadoop/conf
export YARN_CONF_DIR=/etc/hadoop/conf
export JAVA_HOME=/usr/lib/jvm/jre-1.8.0-openjdk
export JRE_HOME=/usr/lib/jvm/jre-1.8.0-openjdk/jre
export PYSPARK_DRIVER_PYTHON=jupyter
export PYSPARK_DRIVER_PYTHON_OPTS=notebook
export PYSPARK_PYTHON=python3
export PYTHONSTARTUP="${SPARK_HOME}/python/pyspark/shell.py"
export PATH=$SPARK_HOME:$JAVA_HOME/bin:$JAVA_HOME/jre/bin:$PATH

jupyter-lab --no-browser --ip=0.0.0.0 --port 60000 --allow-root
